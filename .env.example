# 01exchange API配置
API_URL=https://zo-mainnet.n1.xyz
# API_URL=https://zo-devnet.n1.xyz  # 测试网

# Solana钱包私钥（Base58格式）
SOLANA_PRIVATE_KEY=your_private_key_here

# 交易配置
SYMBOL=BTCUSD
MARKET_ID=0

# 网格策略参数
ORDER_SIZE=0.001
# 初始持仓（正数=多仓，负数=空仓，0=无仓位）
# 脚本启动时使用此值，之后根据成交自动更新
INITIAL_POSITION=0
TOTAL_ORDERS=18
WINDOW_PERCENT=0.12
SELL_RATIO=0.5
BUY_RATIO=0.5
BASE_PRICE_INTERVAL=10
SAFE_GAP=20
MAX_DRIFT_BUFFER=2000
MIN_VALID_PRICE=10000
MAX_MULTIPLIER=15

# 指标参数
INDICATOR_TIMEFRAME=5m

# 风控参数
RSI_MIN=30
RSI_MAX=70
ADX_TREND_THRESHOLD=25
ADX_STRONG_TREND=30
RISK_COOLDOWN_MINUTES=15

# 时间参数（毫秒）
MIN_ORDER_INTERVAL=8000
ORDER_COOLDOWN=4000
MONITOR_INTERVAL=10000
CHECK_INTERVAL_RISK=10000

# 日志级别
LOG_LEVEL=INFO
